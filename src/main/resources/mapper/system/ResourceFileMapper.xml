<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.scenic.mapper.system.ResourceFileMapper">

    <!-- 结果映射 -->
    <resultMap id="ResourceFileResultMap" type="com.scenic.entity.system.ResourceFile">
        <id column="id" property="id" jdbcType="BIGINT"/>
        <result column="file_name" property="fileName" jdbcType="VARCHAR"/>
        <result column="file_key" property="fileKey" jdbcType="VARCHAR"/>
        <result column="bucket_name" property="bucketName" jdbcType="VARCHAR"/>
        <result column="file_size" property="fileSize" jdbcType="BIGINT"/>
        <result column="mime_type" property="mimeType" jdbcType="VARCHAR"/>
        <result column="file_type" property="fileType" jdbcType="TINYINT"/>
        <result column="width" property="width" jdbcType="SMALLINT"/>
        <result column="height" property="height" jdbcType="SMALLINT"/>
        <result column="duration" property="duration" jdbcType="INTEGER"/>
        <result column="sha256" property="sha256" jdbcType="CHAR"/>
        <result column="upload_user_id" property="uploadUserId" jdbcType="BIGINT"/>
        <result column="is_temp" property="isTemp" jdbcType="TINYINT"/>
        <result column="create_time" property="createTime" jdbcType="TIMESTAMP"/>
        <result column="update_time" property="updateTime" jdbcType="TIMESTAMP"/>
        <result column="create_by" property="createBy" jdbcType="BIGINT"/>
        <result column="update_by" property="updateBy" jdbcType="BIGINT"/>
    </resultMap>

    <!-- 查询字段 -->
    <sql id="ResourceFile_Column_List">
        id, file_name, file_key, bucket_name, file_size, mime_type, file_type, width, height, duration, sha256, upload_user_id, is_temp, create_time, update_time, create_by, update_by
    </sql>

    <!-- 根据ID列表查询资源文件列表 -->
    <select id="selectByIds" resultMap="ResourceFileResultMap">
        SELECT 
        <include refid="ResourceFile_Column_List"/>
        FROM resource_file
        WHERE id IN
        <foreach item="id" collection="ids" open="(" separator="," close=")">
            #{id}
        </foreach>
        ORDER BY create_time DESC
    </select>
</mapper>
