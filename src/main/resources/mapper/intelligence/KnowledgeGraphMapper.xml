<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.scenic.mapper.intelligence.KnowledgeGraphMapper">
    
    <!-- 结果映射 -->
    <resultMap id="KnowledgeGraphResultMap" type="com.scenic.entity.intelligence.KnowledgeGraph">
        <id column="id" property="id"/>
        <result column="species_name" property="speciesName"/>
        <result column="scientific_name" property="scientificName"/>
        <result column="description" property="description"/>
        <result column="image_url" property="imageUrl"/>
        <result column="category" property="category"/>
        <result column="habitat" property="habitat"/>
        <result column="status" property="status"/>
        <result column="create_time" property="createTime"/>
        <result column="update_time" property="updateTime"/>
    </resultMap>
    
    <!-- 根据条件查询知识图谱列表 -->
    <select id="selectByCondition" parameterType="map" resultMap="KnowledgeGraphResultMap">
        SELECT * FROM knowledge_graph
        <where>
            <if test="speciesName != null and speciesName != ''">
                species_name LIKE CONCAT('%', #{speciesName}, '%')
            </if>
            <if test="category != null and category != ''">
                AND category = #{category}
            </if>
            <if test="status != null">
                AND status = #{status}
            </if>
        </where>
        ORDER BY create_time DESC
    </select>
    
</mapper>
