<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.scenic.mapper.user.UserMapper">

    <!-- 结果映射 -->
    <resultMap id="UserResultMap" type="com.scenic.entity.user.User">
        <id column="id" property="id" jdbcType="BIGINT"/>
        <result column="username" property="username" jdbcType="VARCHAR"/>
        <result column="password" property="password" jdbcType="VARCHAR"/>
        <result column="nickname" property="nickname" jdbcType="VARCHAR"/>
        <result column="phone" property="phone" jdbcType="VARCHAR"/>
        <result column="email" property="email" jdbcType="VARCHAR"/>
        <result column="avatar" property="avatar" jdbcType="VARCHAR"/>
        <result column="open_id" property="openId" jdbcType="VARCHAR"/>
        <result column="role" property="role" jdbcType="VARCHAR"/>
        <result column="enabled" property="enabled" jdbcType="BIT"/>
        <result column="create_time" property="createTime" jdbcType="TIMESTAMP"/>
        <result column="update_time" property="updateTime" jdbcType="TIMESTAMP"/>
    </resultMap>

    <!-- 查询字段 -->
    <sql id="User_Column_List">
        id, username, password, nickname, phone, email, avatar, open_id, role, enabled, create_time, update_time
    </sql>

    <!-- 查询用户列表 -->
    <select id="selectList" resultMap="UserResultMap">
        SELECT 
        <include refid="User_Column_List"/>
        FROM user
        <where>
            <if test="username != null and username != ''">
                nickname LIKE CONCAT('%', #{username}, '%')
            </if>
            <if test="phone != null and phone != ''">
                AND phone LIKE CONCAT('%', #{phone}, '%')
            </if>
        </where>
        LIMIT #{offset}, #{limit}
    </select>

    <!-- 查询用户总数 -->
    <select id="selectCount" resultType="java.lang.Integer">
        SELECT COUNT(*)
        FROM user
        <where>
            <if test="username != null and username != ''">
                nickname LIKE CONCAT('%', #{username}, '%')
            </if>
            <if test="phone != null and phone != ''">
                AND phone LIKE CONCAT('%', #{phone}, '%')
            </if>
        </where>
    </select>
</mapper>
