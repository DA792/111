<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.scenic.mapper.user.UserMessageMapper">

    <!-- 结果映射 -->
    <resultMap id="UserMessageResultMap" type="com.scenic.entity.user.UserMessage">
        <id column="id" property="id" jdbcType="BIGINT"/>
        <result column="user_id" property="userId" jdbcType="BIGINT"/>
        <result column="related_user_id" property="relatedUserId" jdbcType="BIGINT"/>
        <result column="related_user_name" property="relatedUserName" jdbcType="VARCHAR"/>
        <result column="type" property="type" jdbcType="VARCHAR"/>
        <result column="content" property="content" jdbcType="VARCHAR"/>
        <result column="related_id" property="relatedId" jdbcType="BIGINT"/>
        <result column="is_read" property="isRead" jdbcType="BIT"/>
        <result column="create_time" property="createTime" jdbcType="TIMESTAMP"/>
        <result column="update_time" property="updateTime" jdbcType="TIMESTAMP"/>
    </resultMap>

    <!-- 查询字段 -->
    <sql id="UserMessage_Column_List">
        id, user_id, related_user_id, related_user_name, type, content, related_id, is_read, create_time, update_time
    </sql>

    <!-- 根据用户ID查询消息列表 -->
    <select id="selectByUserId" resultMap="UserMessageResultMap">
        SELECT 
        <include refid="UserMessage_Column_List"/>
        FROM user_message
        WHERE user_id = #{userId}
        <if test="type != null and type != ''">
            AND type = #{type}
        </if>
        ORDER BY create_time DESC
        LIMIT #{offset}, #{limit}
    </select>

    <!-- 查询消息总数 -->
    <select id="selectCountByUserId" resultType="java.lang.Integer">
        SELECT COUNT(*)
        FROM user_message
        WHERE user_id = #{userId}
        <if test="type != null and type != ''">
            AND type = #{type}
        </if>
    </select>
</mapper>
