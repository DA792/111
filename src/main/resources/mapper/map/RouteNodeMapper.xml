<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.scenic.mapper.map.RouteNodeMapper">

    <!-- 结果映射 -->
    <resultMap id="RouteNodeResultMap" type="com.scenic.entity.map.RouteNode">
        <id column="id" property="id" jdbcType="BIGINT"/>
        <result column="route_id" property="routeId" jdbcType="BIGINT"/>
        <result column="name" property="name" jdbcType="VARCHAR"/>
        <result column="description" property="description" jdbcType="VARCHAR"/>
        <result column="latitude" property="latitude" jdbcType="DECIMAL"/>
        <result column="longitude" property="longitude" jdbcType="DECIMAL"/>
        <result column="image_url" property="imageUrl" jdbcType="VARCHAR"/>
        <result column="order_num" property="orderNum" jdbcType="INTEGER"/>
        <result column="node_type" property="nodeType" jdbcType="VARCHAR"/>
        <result column="enabled" property="enabled" jdbcType="BIT"/>
        <result column="create_time" property="createTime" jdbcType="TIMESTAMP"/>
        <result column="update_time" property="updateTime" jdbcType="TIMESTAMP"/>
    </resultMap>

    <!-- 查询字段 -->
    <sql id="RouteNode_Column_List">
        id, route_id, name, description, latitude, longitude, image_url, order_num, node_type, enabled, create_time, update_time
    </sql>

    <!-- 管理员查询路线节点列表 -->
    <select id="selectForAdmin" resultMap="RouteNodeResultMap">
        SELECT 
        <include refid="RouteNode_Column_List"/>
        FROM route_node
        <where>
            <if test="name != null and name != ''">
                name LIKE CONCAT('%', #{name}, '%')
            </if>
            <if test="nodeType != null and nodeType != ''">
                AND node_type = #{nodeType}
            </if>
            <if test="enabled != null">
                AND enabled = #{enabled}
            </if>
        </where>
        ORDER BY create_time DESC
        LIMIT #{offset}, #{limit}
    </select>

    <!-- 管理员查询路线节点总数 -->
    <select id="selectCountForAdmin" resultType="java.lang.Integer">
        SELECT COUNT(*)
        FROM route_node
        <where>
            <if test="name != null and name != ''">
                name LIKE CONCAT('%', #{name}, '%')
            </if>
            <if test="nodeType != null and nodeType != ''">
                AND node_type = #{nodeType}
            </if>
            <if test="enabled != null">
                AND enabled = #{enabled}
            </if>
        </where>
    </select>
</mapper>
